<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SymFEasy {% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
        {% stylesheets '@AppBundle/Resources/public/css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

</head>
<body>
<header>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                </button>
                <a class="navbar-brand" href="{{ path('article')}}">Symfony Car</a>
            </div>
            <div class="navbar-collapse collapse" style="float: right;">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('article')}}">Articles</a></li>
                    <li><a href="{{ path('sonata_admin_dashboard') }}">Admin</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">API <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('api_Article')}}">Article</a></li>
                            <li><a href="{{ path('api_Category')}}">Category</a></li>
                            <li><a href="{{ path('api_Tag')}}">Tag</a></li>
                            <li><a href="{{ path('api_User')}}">User</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
</header>
<main class="container">
    {% block content %} {% endblock  %}
</main>
<footer>
    <br>
    <br>
    <p class="text-center">&copy Symfony Car</p>
</footer>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>